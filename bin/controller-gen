#!/bin/bash
set -e

CONTROLLER_GEN_VERSION=v0.16.5

BIN_DIR="${PWD}/tmp"
BIN_NAME=controller-gen
BIN_PATH="${BIN_DIR}/${BIN_NAME}"

if [ ! -f "${BIN_PATH}" ]
then
  echo "Installing ${BIN_PATH}"
  mkdir -p "${BIN_DIR}"
  GOBIN="${BIN_DIR}" go install sigs.k8s.io/controller-tools/cmd/controller-gen@${CONTROLLER_GEN_VERSION}
fi

exec "${BIN_PATH}" "$@"
