#!/bin/bash
set -e

SETUP_ENVTEST_VERSION=$(go list -m -f "{{ .Version }}" sigs.k8s.io/controller-runtime | awk -F'[v.]' '{printf "release-%d.%d", $2, $3}')

BIN_DIR="${PWD}/tmp"
BIN_NAME=setup-envtest
BIN_PATH="${BIN_DIR}/${BIN_NAME}"

mkdir -p "${BIN_DIR}"

# We need to prevent multiple parallel runs of this script from interfering with each other. Such interference would
# cause errors like "Text file busy". We are using a file lock for that which is released when the script exits.
exec 200>"${BIN_PATH}.lock"
flock -x 200

if [ ! -f "${BIN_PATH}" ]
then
  echo "Installing ${BIN_PATH}"
  GOBIN="${BIN_DIR}" go install sigs.k8s.io/controller-runtime/tools/setup-envtest@${SETUP_ENVTEST_VERSION}
fi

exec "${BIN_PATH}" "$@"
